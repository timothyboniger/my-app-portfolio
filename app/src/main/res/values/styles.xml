<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="LayoutBackground" parent="AppTheme">
        <item name="android:background">#E8EAF6</item>
    </style>

    <style name="TitleStyle" parent="AppTheme">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:background">#F08C35</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginTop">20sp</item>
    </style>

    <style name="LastButtonStyle" parent="ButtonStyle">
        <item name="android:background">#E53935</item>
    </style>

</resources>
